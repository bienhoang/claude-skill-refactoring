{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Refactoring Session History",
  "description": "Schema for .refactoring-history.json â€” tracks refactoring sessions for trend analysis.",
  "type": "object",
  "required": ["version", "sessions"],
  "properties": {
    "version": {
      "type": "integer",
      "const": 1,
      "description": "Schema version. Always 1."
    },
    "sessions": {
      "type": "array",
      "description": "Append-only list of refactoring sessions.",
      "items": {
        "type": "object",
        "required": ["timestamp", "target", "command"],
        "properties": {
          "timestamp": {
            "type": "string",
            "format": "date-time",
            "description": "ISO 8601 timestamp of session start."
          },
          "target": {
            "type": "string",
            "description": "File or directory path that was refactored."
          },
          "command": {
            "type": "string",
            "description": "Slash command used (e.g., refactor:fast, refactor:review)."
          },
          "smells_found": {
            "type": "object",
            "description": "Count of smells found by severity.",
            "properties": {
              "critical": { "type": "integer", "minimum": 0 },
              "major": { "type": "integer", "minimum": 0 },
              "minor": { "type": "integer", "minimum": 0 }
            }
          },
          "smells_fixed": {
            "type": "object",
            "description": "Count of smells fixed by severity.",
            "properties": {
              "critical": { "type": "integer", "minimum": 0 },
              "major": { "type": "integer", "minimum": 0 },
              "minor": { "type": "integer", "minimum": 0 }
            }
          },
          "methods_applied": {
            "type": "array",
            "description": "List of refactoring methods applied.",
            "items": { "type": "string" }
          },
          "metrics": {
            "type": "object",
            "description": "Before/after metrics snapshot.",
            "properties": {
              "before": {
                "type": "object",
                "properties": {
                  "avg_complexity": { "type": "number" }
                }
              },
              "after": {
                "type": "object",
                "properties": {
                  "avg_complexity": { "type": "number" }
                }
              }
            }
          }
        }
      }
    }
  }
}
